---
import { db, BlogPosts } from 'astro:db';

interface Props {
  currentSlug: string;
  currentTags?: string[];
  currentCluster?: string;
  limit?: number;
}

const { currentSlug, currentTags = [], currentCluster, limit = 4 } = Astro.props;

// Get all articles
const allArticles = await db.select().from(BlogPosts);

// Filter out current article and find related articles
let relatedArticles = allArticles
  .filter((article) => article.slug !== currentSlug)
  .map((article) => {
    let score = 0;
    
    // Score based on cluster match
    if (currentCluster && article.tags && Array.isArray(article.tags)) {
      if (article.tags.includes(currentCluster)) {
        score += 10;
      }
    }
    
    // Score based on tag matches
    if (currentTags.length > 0 && article.tags && Array.isArray(article.tags)) {
      const matchingTags = article.tags.filter((tag) => currentTags.includes(tag));
      score += matchingTags.length * 5;
    }
    
    return { article, score };
  })
  .filter((item) => item.score > 0)
  .sort((a, b) => b.score - a.score)
  .slice(0, limit)
  .map((item) => item.article);

// If not enough related articles, fill with recent articles
if (relatedArticles.length < limit) {
  const recentArticles = allArticles
    .filter((article) => article.slug !== currentSlug && !relatedArticles.some((ra) => ra.slug === article.slug))
    .sort((a, b) => b.pubDate.getTime() - a.pubDate.getTime())
    .slice(0, limit - relatedArticles.length);
  
  relatedArticles = [...relatedArticles, ...recentArticles];
}

// Determine URL structure based on cluster
const getArticleUrl = (article: typeof BlogPosts.$inferSelect) => {
  if (currentCluster && article.tags && Array.isArray(article.tags) && article.tags.includes(currentCluster)) {
    return `/topics/${currentCluster}/${article.slug}`;
  }
  return `/blog/${article.slug}`;
};
---

{relatedArticles.length > 0 && (
  <aside class="mt-16 pt-12 border-t-2 border-slate-blue-200">
    <h2 class="text-3xl font-bold text-navy-800 mb-8">
      Related Content
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      {relatedArticles.map((article) => (
        <a
          href={getArticleUrl(article)}
          class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300 border-2 border-slate-blue-200 hover:border-sky-400 transform hover:-translate-y-1 group"
        >
          {article.heroImage && (
            <div class="aspect-video bg-slate-blue-100 overflow-hidden">
              <img
                src={article.heroImage}
                alt={article.title}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                loading="lazy"
                width="300"
                height="169"
              />
            </div>
          )}
          <div class="p-4">
            <h3 class="text-lg font-semibold text-navy-800 mb-2 group-hover:text-sky-500 transition-colors line-clamp-2">
              {article.title}
            </h3>
            <p class="text-slate-blue-600 text-sm mb-3 line-clamp-2">
              {article.description}
            </p>
            <div class="flex items-center justify-between text-xs text-slate-blue-500">
              <time datetime={article.pubDate.toISOString()}>
                {article.pubDate.toLocaleDateString('en-US', {
                  year: 'numeric',
                  month: 'short',
                  day: 'numeric',
                })}
              </time>
            </div>
          </div>
        </a>
      ))}
    </div>
  </aside>
)}
