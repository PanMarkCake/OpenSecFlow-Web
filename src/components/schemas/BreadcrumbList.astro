---
import SchemaLD from '../SchemaLD.astro';

interface Props {
  items: Array<{
    name: string;
    url: string;
  }>;
  siteURL?: string;
}

const { items, siteURL = 'https://opensecflow.io' } = Astro.props;

const breadcrumbSchema = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement: items.map((item, index) => ({
    '@type': 'ListItem',
    position: index + 1,
    name: item.name,
    item: new URL(item.url, siteURL).toString(),
  })),
};
---

<SchemaLD schema={breadcrumbSchema} />
