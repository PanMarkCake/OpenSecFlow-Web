---
import { ViewTransitions } from 'astro:transitions';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import SEO from '../components/SEO.astro';

interface Props {
  title: string;
  description: string;
  canonicalURL?: URL | string;
  ogImage?: string;
  ogType?: 'website' | 'article';
  noindex?: boolean;
}

const {
  title,
  description,
  canonicalURL,
  ogImage,
  ogType,
  noindex,
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" sizes="32x32" href="/svgviewer-outputB.svg" />
    <meta name="generator" content={Astro.generator} />
    <ViewTransitions />
    <SEO
      title={title}
      description={description}
      canonicalURL={canonicalURL}
      ogImage={ogImage}
      ogType={ogType}
      noindex={noindex}
    />
  </head>
  <body class="min-h-screen bg-white">
    <Navigation />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style>
  /* Smooth page transitions */
  @view-transition {
    navigation: auto;
  }

  /* Fade transition for page content */
  ::view-transition-old(root),
  ::view-transition-new(root) {
    animation-duration: 0.4s;
    animation-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
  }

  ::view-transition-old(root) {
    animation-name: fade-out, slide-out;
  }

  ::view-transition-new(root) {
    animation-name: fade-in, slide-in;
  }

  @keyframes fade-out {
    from {
      opacity: 1;
    }
    to {
      opacity: 0;
    }
  }

  @keyframes fade-in {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes slide-out {
    from {
      transform: translateY(0);
    }
    to {
      transform: translateY(-10px);
    }
  }

  @keyframes slide-in {
    from {
      transform: translateY(10px);
    }
    to {
      transform: translateY(0);
    }
  }

  /* Preserve navigation and footer during transitions */
  nav {
    view-transition-name: navigation-bar;
  }

  footer {
    view-transition-name: footer-bar;
  }

  /* Smooth transitions for navigation and footer */
  ::view-transition-old(navigation-bar),
  ::view-transition-new(navigation-bar),
  ::view-transition-old(footer-bar),
  ::view-transition-new(footer-bar) {
    animation-duration: 0.2s;
    animation-timing-function: ease-out;
  }

  /* Smooth scroll behavior */
  html {
    scroll-behavior: smooth;
  }

  /* Prevent layout shift during transitions */
  main {
    min-height: calc(100vh - 200px);
  }
</style>

