---
import MainLayout from '../layouts/MainLayout.astro';
import Hero from '../components/Hero.astro';
import FeaturesGrid from '../components/FeaturesGrid.astro';
import EngineeringChallenges from '../components/EngineeringChallenges.astro';
import SchemaLD from '../components/SchemaLD.astro';

const siteURL = Astro.site || 'https://opensecflow.com';

// SoftwareApplication Schema
const softwareSchema = {
  '@context': 'https://schema.org',
  '@type': 'SoftwareApplication',
  name: 'NetDriver',
  applicationCategory: 'NetworkAutomationApplication',
  operatingSystem: 'Linux, Cross-platform',
  offers: {
    '@type': 'Offer',
    price: '0',
    priceCurrency: 'USD',
  },
  description: 'NetDriver is a free, open-source NetDevOps framework for Python. Built on Netmiko by the OpenSecFlow community for high-performance network automation.',
  url: siteURL,
  author: {
    '@type': 'Organization',
    name: 'OpenSecFlow',
    url: siteURL,
  },
  license: 'https://opensource.org/licenses',
};

// FAQPage Schema
const faqSchema = {
  '@context': 'https://schema.org',
  '@type': 'FAQPage',
  mainEntity: [
    {
      '@type': 'Question',
      name: 'How does NetDriver solve slow SSH scripting?',
      acceptedAnswer: {
        '@type': 'Answer',
        text: 'NetDriver maintains persistent SSH connections across multiple command executions, eliminating connection overhead and enabling low-latency command execution.',
      },
    },
    {
      '@type': 'Question',
      name: 'How does NetDriver prevent configuration collisions?',
      acceptedAnswer: {
        '@type': 'Answer',
        text: 'NetDriver\'s intelligent command queuing system prevents configuration collisions by serializing operations and detecting potential conflicts before execution.',
      },
    },
    {
      '@type': 'Question',
      name: 'How can I integrate legacy network equipment into web applications?',
      acceptedAnswer: {
        '@type': 'Answer',
        text: 'NetDriver provides an HTTP RESTful wrapper that transforms legacy CLI interfaces into modern REST APIs, enabling seamless integration with web applications.',
      },
    },
    {
      '@type': 'Question',
      name: 'How does NetDriver handle updates at scale?',
      acceptedAnswer: {
        '@type': 'Answer',
        text: 'Built on AsyncSSH, NetDriver enables concurrent operations across hundreds of devices simultaneously, dramatically improving automation throughput.',
      },
    },
  ],
};

const features = [
  {
    title: 'API-Driven Integration',
    description: 'Offers a native HTTP RESTful API for seamless integration with external systems and applications.',
    icon: 'üåê',
  },
  {
    title: 'Customizable Session Persistence',
    description: 'Maintains open connections for ongoing tasks, significantly improving execution efficiency.',
    icon: '‚öôÔ∏è',
  },
  {
    title: 'Command Execution Queuing',
    description: 'Prevents concurrency conflicts to ensure stable and predictable device interactions.',
    icon: 'üíª',
  },
  {
    title: 'Asynchronous Operations',
    description: 'Enables efficient, non-blocking communication with multiple devices simultaneously.',
    icon: '‚ö°',
  },
];

const valueProposition = {
  title: 'OpenSecFlow',
  subtitle: 'Network Automation',
};
---

<MainLayout
  title="OpenSecFlow - Network Automation with Netdriver"
  description="Netdriver is a free, open-source NetDevOps framework for Python. Built on Netmiko by the OpenSecFlow community for high-performance network automation."
>
  <SchemaLD schema={softwareSchema} />
  <SchemaLD schema={faqSchema} />
  <Hero
    title={valueProposition.title}
    subtitle={valueProposition.subtitle}
    ctaText="Learn More"
    ctaLink="#features"
  />
  
  <section id="features" class="py-16 bg-gradient-to-b from-white to-slate-blue-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-navy-800 mb-4">
          What is OpenSecFlow?
        </h2>
        <p class="text-xl text-slate-blue-600 font-semibold max-w-3xl mx-auto">
          OpenSecFlow is a group of developers and network engineers collaborating together to create a community 
          create network-automation tools that will assist in driving the future of network automation.
          
        </p>
      </div>
    </div>
    
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mb-5">
    <h2 class="text-3xl font-bold text-navy-800 mb-4 text-center ">
       OpenSecFlow Principles 
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mt-8">
    <!-- Card 1 -->
    <div class="flex flex-col  bg-[#c0d1df] to-slate-blue-50 border border-slate-200  shadow-lg  items-center">
      <div class="">
        <!-- Example Image or Icon placeholder -->
        <img src="public/pexels-richardstefun-1047346.jpg" alt="The Core Vision" class="w-full" loading="lazy" width="800" height="600">
      </div>
      <div class="text-center p-8">
      <h3 class="text-2xl font-bold text-white mb-2">The Core Vision</h3>
      <p class="text-lg  text-center">
        The majority of network automation projects only concentrate on security tools or operational efficiency. We aim to investigate the possibilities of designing with both perspectives at the same time: compliance-native operations, secure-by-default automation, and threat-aware orchestration. Opinionated pragmatic solutions to actual issues.
      </p>
    </div>
    </div>
    <!-- Card 2 -->
    <div class="flex flex-col bg-gradient-to-br from-blue-100 via-white to-slate-blue-100 border border-blue-200 shadow-lg items-center">
      <div class=" bg-gradient-to-br  rounded-xl flex items-center justify-center ">
        <!-- Example Image or Icon placeholder -->
        <div class="">
          <!-- Example Image or Icon placeholder -->
          <img src="public/pexels-stefan-239928581-32997843.jpg" alt="The Roadmap" class="w-full" loading="lazy" width="800" height="600">
        </div>
      </div>
      <div class="text-center p-8">
      <h3 class="text-2xl font-bold text-navy-800 mb-2">The Roadmap</h3>
      <p class="text-lg text-slate-blue-600 text-center">
        The roadmap includes other building blocks such as policy enforcement agents, asset discovery and inventory systems, automated remediation frameworks, and security validation pipelines, but we‚Äôre starting with NetDriver because command execution is essential. They should all be reusable modular parts.
      </p>
    </div>
  </div>
    <!-- Card 3 -->
    <div class="flex flex-col bg-gradient-to-br from-navy-700 to-navy-800 shadow-lg items-center">
      <div class=" bg-gradient-to-br  rounded-xl flex items-center justify-center ">
        <!-- Example Image or Icon placeholder -->
        <div class="">
          <!-- Example Image or Icon placeholder -->
          <img src="public/pexels-mikhail-nilov-7988210.jpg" alt="A Community of Learnin" class="w-full" loading="lazy" width="800" height="600">
        </div>
      </div>
      <div class="text-center p-8">
      <h3 class="text-2xl font-bold text-white mb-2">A Community of Learning</h3>
      <p class="text-lg text-sky-200 text-center">
        Not everyone has to be an expert in networks or security research. Whether it‚Äôs reporting issues, creating documentation, or developing extensions, OpenSecFlow should be sufficiently accessible to allow practitioners to learn, contribute, and gain confidence in a setting where their contributions matter.
      </p>
    </div>
  </div>
    <!-- Card 4 -->
    <div class="flex flex-col bg-gradient-to-br from-blue-400 to-slate-blue-600 shadow-lg items-center">
      <div class=" bg-gradient-to-br  rounded-xl flex items-center justify-center ">
        <!-- Example Image or Icon placeholder -->
        <div class="">
          <!-- Example Image or Icon placeholder -->
          <img src="public/pexels-pixabay-60504.jpg" alt="Security" class="w-full" loading="lazy" width="800" height="600">
        </div>
      </div>
      <div class="text-center p-8">
      <h3 class="text-2xl font-bold text-white mb-2">Secure by Default</h3>
      <p class="text-lg text-sky-100 text-center">
        Improving default settings. In network automation, we want the secure choice to be the easy choice as well. This entails incorporating security considerations into the architecture from the start rather than adding them after it's inconvenient.
      </p>
    </div>
  </div>
  </div>
  </div>

  <FeaturesGrid features={features} />

  <EngineeringChallenges />

  <section class="py-16 bg-gradient-to-br from-navy-700 to-navy-800 text-white relative overflow-hidden">
    <!-- Decorative Background -->
    <div class="absolute inset-0 opacity-10">
      <svg class="w-full h-full" viewBox="0 0 1440 320" xmlns="http://www.w3.org/2000/svg">
        <path d="M0,160 Q360,80 720,160 T1440,160 L1440,320 L0,320 Z" fill="white" opacity="0.1"/>
        <path d="M0,224 Q360,288 720,224 T1440,224 L1440,320 L0,320 Z" fill="white" opacity="0.05"/>
      </svg>
    </div>
    
    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold mb-4">Explore Netdriver</h2>
      <p class="text-xl text-sky-200 mb-8 max-w-2xl mx-auto">
        Check out our GitHub repository to explore the codebase and give your feedback so that Netdriver keeps getting better for everyone.
      </p>
      <a
        href="https://github.com/OpenSecFlow/netdriver"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center justify-center px-8 py-3 border-2 border-white text-base font-medium rounded-full text-white bg-transparent hover:bg-white hover:text-navy-700 transition-all duration-300 shadow-lg hover:shadow-xl transform hover:scale-105"
      >
        Visit GitHub Repository
        <svg
          class="ml-2 -mr-1 w-5 h-5"
          fill="currentColor"
          viewBox="0 0 20 20"
        >
          <path
            fill-rule="evenodd"
            d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
            clip-rule="evenodd"
          />
        </svg>
      </a>
    </div>
  </section>
</MainLayout>

